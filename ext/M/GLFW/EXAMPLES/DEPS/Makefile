#--------------------------------------------------------------------
#--------------------------------------------------------------------

OPT += $(shell pkg-config --cflags glfw3)
OPT += -I. 

LIB += $(shell pkg-config --libs glfw3) -lm

#--------------------------------------------------------------------

EXTLIB = glad.o tinycthread.o


PROGS = $(EXTLIB) 


all: $(PROGS)

#-------------------------------------------------

tinycthread.o: tinycthread.c
	$(CC) $(OPT) $< $(LIB) -c -o $@

glad.o: glad.c
	$(CC) $(OPT) $< $(LIB) -c -o $@

#--------------------------------------------------------------------

clean:
	@-rm -vf *.o $(PROGS)

#--------------------------------------------------------------------
#--------------------------------------------------------------------

